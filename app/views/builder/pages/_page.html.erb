<article class="page <%= 'sortable' if sortable_pages? %>" data-id="<%= page.id %>">
  <%= content_tag(:span, page_quick_status(page), :class => 'status') %>
  <div class="data">
    <div class="top">
      <%= content_tag(:h4, page.title, :class => 'title') %>
      <%= content_tag(
        :span,
        link_to(
          page.page_path,
          preview_page_path(:page_path => page.page_path.gsub(/^\//, '')),
          :target => :blank
        ),
        :class => 'path'
      ) if page.template.has_show_view? %>
    </div>
    <%= simple_form_for(
      [:builder, current_site, page],
      :html => { :class => 'page-position' }
    ) do |f| %>
      <%= f.input :position, :input_html => { :class => 'position' } %>
    <% end if sortable_pages? %>
    <div class="bottom">
      <%= page_last_edited(page) %>
      <%= link_to(
        page.template.title,
        builder_route([page.template], :show),
        :class => 'template'
      ) %>
    </div>
  </div>
  <div class="actions">
    <div class="top">
      <%= page_children_button(page) %>
      <%= link_to(
        'Move',
        builder_site_page_move_path(current_site, page),
        :class => 'move'
      ) if has_admin_access? %>
      <%= link_to(
        'Edit',
        builder_route([page], :edit),
        :class => 'edit'
      ) %>
    </div>
    <div class="bottom">
      <% if page.published? %>
        <%= link_to(
          "Unpublish",
          builder_site_page_unpublish_path(current_site, page,
            :redirect_route => request.path),
          :method => :post,
          :class => 'unpublish',
          :data => { :confirm => 'Are you sure?' }
        ) %>
      <% else %>
        <%= link_to(
          "Publish",
          builder_site_page_publish_path(current_site, page,
            :redirect_route => request.path),
          :method => :post,
          :class => 'publish',
          :data => { :confirm => 'Are you sure?' }
        ) %>
      <% end %>
      <%= link_to(
        "Delete",
        builder_route([page], :show),
        :method => :delete,
        :class => 'delete',
        :data => { :confirm => 'WARNING: This will destroy all pages and
          subpages. Are you sure you want to delete this page?' }
      ) if has_admin_access? %>
    </div>
  </div>
</article>
