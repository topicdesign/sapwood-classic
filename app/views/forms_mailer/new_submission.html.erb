<style type="text/css">

  * {
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    font-weight: 200;
  }

  #container {
    max-width: 800px;
    margin: 25px auto 0 auto;
  }

  div.submission {
    background: #EFEFEF;
    padding: 10px 25px;
    border: 1px solid #cfcfcf;
  }

  p {
  }

  strong {
    font-weight: 600;
  }

  dt {
    display: block;
    margin: 20px 0 5px 0;
    font-size: 13px;
    text-transform: uppercase;
    font-weight: 600;
  }
  dd {
    margin: 0;
  }

</style>

<div id="container">

  <p>There is a new message for your <%= content_tag(:strong, @form.title) %> form.</p>

  <div class="submission">
    <dl>
      <% @submission.field_data.each do |k,v| %>
        <%= content_tag(:dt, k.humanize.titleize) %>
        <%= content_tag(:dd, v) %>
      <% end %>
    </dl>
  </div>

</div>
